# aliases
alias nstow='stow --no-folding --dotfiles'
alias ls='exa --group-directories-first'
alias pacman='pacman --color=auto'
alias pm='pulsemixer'
alias open='xdg-open'
alias r='ranger'
alias v='vifmrun'
alias yay='yay --color=auto'
alias irssi='irssi --config="$XDG_CONFIG_HOME"/irssi/config --home="$XDG_DATA_HOME"/irssi'
alias new='exa -r --sort newest | head -5'
alias webcam='mpv av://v4l2:/dev/video0 --profile=low-latency --untimed'
alias webcam_loopback='mpv av://v4l2:/dev/video9 --profile=low-latency --untimed'
alias stream='ffmpeg -f v4l2 -input_format mjpeg -framerate 30 -video_size 1920x1080 -i /dev/video0 -pix_fmt yuv420p -f v4l2 /dev/video9'
alias mpv='mpv --hwdec=auto'
alias bc='bc -l'
alias rdp_laptop='LIBVA_DRIVER_NAME= xfreerdp /kbd:0x00020409 /v:LAP002158.local /u:folkert.bleichrodt /d:GLOBAL /dynamic-resolution /p:$(pass applusrtd/applus/folkert.bleichrodt | head -1)' 
alias cal='cal --monday -w'
alias yt='newsboat --config-file=$HOME/.config/newsboat/youtube-config --url-file=$HOME/.config/newsboat/youtube-urls --cache-file=$HOME/.config/newsboat/youtube-cache.db'
